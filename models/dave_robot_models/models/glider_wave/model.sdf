<?xml version="1.0"?>
<sdf version="1.6">
  <model name="wave_glider">

    <link name="wave_glider_float_link">
      <inertial>
        <pose>0 0 -0.13 0 0 0</pose>
          <mass>71</mass>
          <inertia>
            <ixx>4.194916667</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>55.35278333</iyy>
            <iyz>0</iyz>
            <izz>58.92171667</izz>
          </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_hull_collision.stl</uri>
          </mesh>
          <!-- <box>
            <size>3.05 0.81 0.23</size>
          </box> -->
        </geometry>
      </collision>
      <collision name="fin_collision">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_fin_collision.stl</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_hull.dae</uri>
          </mesh>
          <!-- <box>
            <size>3.05 0.81 0.23</size>
          </box> -->
        </geometry>
      </visual>
      <visual name="fin_visual">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_fin.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <visual name="sensors_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_sensors.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <visual name="umbilical_connection_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_umbilical_connection.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <link name="wave_glider_umbilical_joint_link">
      <inertial>
        <pose>0.23 0 -0.38 0 0 0</pose>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <box>
            <size>0.2 0.2 0.2</size>
          </box>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_umbilical_joint.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="wave_glider_umbilical_joint_joint" type="revolute">
        <pose>0.23 0 -0.38 0 0 0</pose>
        <child>wave_glider_umbilical_joint_link</child>
        <parent>wave_glider_float_link</parent>
        <axis>
          <limit>
            <lower>-0.8</lower>
            <upper>0.8</upper>
          </limit>
          <dynamics>
            <damping>0.1</damping>
          </dynamics>
          <xyz>1 0 0</xyz>
        </axis>
    </joint>

    <link name="wave_glider_umbilical_link">
      <inertial>
        <pose>0.23 0 -1.31 0 0 0</pose>
          <mass>0.5</mass>
          <inertia>
            <ixx>0.001</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>0.001</iyy>
            <iyz>0</iyz>
            <izz>0.001</izz>
          </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_umbilical.dae</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_umbilical.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>  

    <joint name="wave_glider_umbilical_joint" type="revolute">
        <pose>0.23 0 -0.46 0 0 0</pose>
        <child>wave_glider_umbilical_link</child>
        <parent>wave_glider_umbilical_joint_joint</parent>
        <axis>
          <limit>
            <lower>-0.8</lower>
            <upper>0.8</upper>
          </limit>
          <dynamics>
            <damping>0.1</damping>
          </dynamics>
          <xyz>0 1 0</xyz>
        </axis>
    </joint>

    <link name="wave_glider_sub_body_link">
      <inertial>
        <pose>0.23 0 -2.35 0 0 0</pose>
          <inertia>
              <ixx>0.39815867</ixx>
              <ixy>0</ixy>
              <ixz>0</ixz>
              <iyy>29.511223</iyy>
              <iyz>0</iyz>
              <izz>29.14933567</izz>
          </inertia>
          <mass>84</mass>
      </inertial>
      <collision name="body_collision">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_sub_body_collision.stl</uri>
          </mesh>
        </geometry>
      </collision>
      <visual name="body_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_sub_body.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <visual name="fin_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_sub_fin.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <visual name="thruster_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_sub_thruster.dae</uri>
          </mesh>
        </geometry>
      </visual>
      <visual name="wings_visual">
        <geometry>
          <mesh>
            <scale>1.0 1.0 1.0</scale>
            <uri>model://glider_wave/mesh/wave_glider_sub_wings.dae</uri>
          </mesh>
        </geometry>
      </visual>
    </link>

    <joint name="wave_glider_sub_body_joint" type="revolute">
      <pose>0.23 0 -2.15 0 0 0</pose>
      <child>wave_glider_sub_body_link</child>
      <parent>wave_glider_umbilical_link</parent>
      <axis>
        <limit>
          <lower>-0.8</lower>
          <upper>0.8</upper>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <!-- Hydrodynamics plugin -->
    <plugin
        filename="gz-waves1-hydrodynamics-system"  
        name="gz::sim::systems::Hydrodynamics">
      
        <enable>wave_glider::wave_glider_float_link</enable>
        <enable>wave_glider::wave_glider_sub_body_link</enable>
          
        <hydrodynamics>
          <!-- <damping_on>1</damping_on>
          <viscous_drag_on>1</viscous_drag_on> 
          <pressure_drag_on>1</pressure_drag_on> -->
        
          <!-- Linear and Angular Damping -->
